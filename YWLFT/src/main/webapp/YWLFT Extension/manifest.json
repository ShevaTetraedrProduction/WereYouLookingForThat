{
	"manifest_version" : 2,
	"name" : "SendMessage",
	"description" : "Your real needs",
	"version" : "1.0.0",
	  "background": {
    "scripts": ["popup.js", "jquery.min.js"],
    "persistent": false
  },
	"browser_action" : {
		"default_icon" : "logo_16.png",
		"default_popup" : "popup.html"
	},
	"permissions": [ "tabs", "activeTab", "declarativeContent", "storage", "http://*/*", "https://*/*"],

	"icons" : {"128" : "logo_128.png"}

}